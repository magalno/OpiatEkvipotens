<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:editTextColor">@color/secondary_text</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="BlueBackgroundTextStyle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:background">#ffffffff</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:height">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="TabStyle">
        <item name="android:textColorSecondary">@color/primary_light</item>
    </style>


</resources>
